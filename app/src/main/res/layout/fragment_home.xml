<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.saiz.jiuguo.app.fragment.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_header"
        android:id="@+id/home_title_linerLayout">

            <android.support.design.widget.TabLayout
                android:id="@+id/home_head_tab"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                app:tabIndicatorColor="#CBA70D"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="#CBA70D"
                app:tabTextColor="@android:color/white" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/home_arrow_down"
            android:src="@drawable/home_arrow_down"/>
    </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/home_viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/home_title_linerLayout"
            />



</RelativeLayout>
