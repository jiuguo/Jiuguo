<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"

        android:background="@drawable/bg_header">

        <ImageView
            android:id="@+id/register_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/icon_menu_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="注册1/2"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/register_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="使用协议"
            android:textColor="#ffffff"
            android:textSize="19dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffeeeff0">


        <EditText
            android:id="@+id/register_zone"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="#ffffff"
            android:enabled="false"
            android:gravity="center"
            android:text="+86"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/register_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/register_zone"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/register_zone"
            android:layout_toRightOf="@+id/register_zone"
            android:background="#ffffff"
            android:text="请输入手机号" />

        <TextView

            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/register_zone"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"
            android:text="填写手机号后才能获取短信验证码哦"
            android:textColor="#ff808080"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/register_number"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:ems="10"
            android:hint="请写验证码"
            android:inputType="number"
            android:textSize="16dp" />

        <Button
            android:id="@+id/register_btn_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/register_number"
            android:layout_alignEnd="@+id/textView"
            android:layout_alignRight="@+id/textView"
            android:layout_alignTop="@+id/register_number"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/register_number"
            android:background="#ff4fcfdc"
            android:text="短信验证码"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/register_btn_next"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignEnd="@+id/register_btn_sms"
            android:layout_alignRight="@+id/register_btn_sms"
            android:layout_below="@+id/register_number"
            android:layout_marginTop="10dp"
            android:background="#fffdaf29"
            android:text="下一步"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/register_btn_next"
            android:layout_marginTop="8dp"
            android:text="点击“下一步”按钮即表示您同意本应用的使用协议"
            android:textColor="#ff808080"
            android:textSize="16dp" />


    </RelativeLayout>
</LinearLayout>