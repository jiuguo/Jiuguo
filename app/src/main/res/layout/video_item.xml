<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="166dp"
        android:layout_height="120dp"
        android:id="@+id/video_imageView"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/img_default"/>
    <TextView
        android:layout_width="166dp"
        android:layout_height="30dp"
        android:padding="2dp"
        android:id="@+id/video_title"
        android:layout_below="@id/video_imageView"
        android:text="视频标题"
        android:textColor="#000000"
        android:textSize="14sp"
        android:lines="3"
         />
    <TextView
        android:layout_width="166dp"
        android:layout_height="30dp"
        android:padding="2dp"
        android:id="@+id/video_title_author"
        android:layout_below="@id/video_title"
        android:text="视频作者"
        android:textSize="10sp"
        android:textColor="#D4D0C8"
        android:lines="3"
        />

    <ImageView
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/video_title"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bg_header_search"
        android:id="@+id/imageView3"
        android:scaleType="fitXY"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/detail_icon_play"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:background="#ffffff"
        android:id="@+id/imageView2"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="count"
        android:textSize="8sp"
        android:id="@+id/video_play_count"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:src="@drawable/detail_icon_time"
        android:background="#ffffff"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:layout_above="@+id/video_title"
        android:layout_toRightOf="@+id/video_play_count"
        android:layout_toEndOf="@+id/video_play_count" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="time"
        android:textSize="8sp"
        android:id="@+id/video_play_time"
        android:layout_above="@+id/video_title"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4" />

</RelativeLayout>